<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".geofennceUI.GeoFencing">

    <com.example.easylife.geofennceUI.CirclularProgressButton
        app:shadowColor="@color/shadowColor"
        app:mainText="Clock In"
        android:duration="1200"
        android:textSize="25dp"
        app:successText="Clock Out"
        app:progressBackgroundColor="@color/progressBackground"
        app:buttonColor="@color/mainButton"
        app:progressBarWidth="10dp"
        app:shadowPadding="20dp"
        app:progressColor="@color/progressColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/progressbutton"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="Press &amp; Hold"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/progressbutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>